@model List<ProductDto>

@{
    ViewBag.Title = "All products";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="d-grid gap-2 md-2">
    <a asp-controller="Products" asp-action="Add" class="btn btn-primary">Add product</a>
</div>

@if(Model.Count > 0)
{
    <div class="row">
        @foreach (var pr in Model)
        {
            <div class="col-sm-6">
                <div class="card mt-2">
                    <div class="card-body">
                        <p class="card-text">@pr.Name</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@pr.Id" class="btn btn-warning">Edit</a>
                            <form class="mt-2" asp-controller="Products" asp-action="Delete" method="post">
                                <div class="d-grid gap-2">
                                     <input type="hidden" name="Id" value="@pr.Id">
                                     <input type="submit" value="Delete" class="btn btn-danger mb-2"/>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else{
    <p class="text-center" style="color:crimson">No products yet!</p>
}

