@model TaskViewModel

@{
    ViewData["Title"] = "Delete Task";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<form asp-action="Delete">

    <div class="d-flex justify-content-center">
        <div class="card " style="width: 50rem;">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Title</h3>
                <p class="card-text"><span class="fw-bold">Description: </span>@Model.Description</p>
            </div>
            <div class="mb-3 d-flex justify-content-center">
                <input type="submit" value="Delete" class="btn btn-danger" onclick="myConfirm(event)" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
        <script>
            function myConfirm(e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        ).then((resultDeleted) => {
                                    e.target.parentElement.parentElement.parentElement.parentElement.submit();
                        })
                    }
                })
            }
        </script>
}
